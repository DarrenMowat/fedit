-- Test Div
t7() = eq(div(8, 2), 4)
t8() = eq(div(27, 3), 9)

-- Test Square
t9() = eq(square(3), 9)

-- Test Fibonacci
t10() = eq(fib(18), 2584)

-- Test Equals (Even though it relies on itself)
t11() = eq(10, 10)

-- Ordering Tests

-- Test Less Than
t12() = isFalse(lt(7, 6))
t13() = isFalse(lt(7, 7))
