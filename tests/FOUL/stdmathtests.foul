
-- FOUL Math Library Tests

import std/math
import std/test

-- Test Add
t1() = eq(add(4, 5), 9)
t2() = eq(add(4, 0), 4)

-- Test Sub
t3() = eq(sub(9, 3), 6)
t4() = eq(sub(1000, 100), 900)

-- Test Mul
t5() = eq(mul(2, 5), 10)
